<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AguaCapturaActivity"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imvSincronizar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/edtBuscar"
            android:src="@drawable/_48_return"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folio servicio:"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-5/21"
            android:layout_gravity="center"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/btnGenerales"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Captura de datos generales"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnMuestreo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Captura de datos muestreo"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnCompuesto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Captura de datos compuestos"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnEvidencia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Captura de datos Evidencia"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>


</FrameLayout>