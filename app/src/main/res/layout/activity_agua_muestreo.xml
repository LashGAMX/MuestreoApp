<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AguaMuestreoActivity"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imvSincronizar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/edtBuscar"
            android:src="@drawable/_48_return"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:text="Datos muestreo"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/btnPH"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="PH"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnTemperatura"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TEMPERATURA DEL AGUA"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnConductividad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CONDUCTIVIDAD"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnGasto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GASTO"
            android:layout_gravity="center"
            android:background="#00867d"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>

</FrameLayout>