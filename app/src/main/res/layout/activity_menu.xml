<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAgua"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#1AA7D9"
            app:cardCornerRadius="20dp"
        >

            <ImageView

                android:layout_width="180dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/agua" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muestreos Agua"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#B13C1B"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/cardAlimento"
            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/alimentos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muestreos Alimentos"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>