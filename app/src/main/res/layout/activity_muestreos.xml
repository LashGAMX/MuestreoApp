<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".MuestreosActivity">

    <EditText
        android:id="@+id/edtBuscar"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:hint="Buscar" />

    <ImageView
        android:id="@+id/imvSincronizar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/edtBuscar"
        android:layout_marginLeft="110px"
        android:foreground="@android:drawable/ic_popup_sync" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lstMuestreos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200px"
            />

    </LinearLayout>

</RelativeLayout>